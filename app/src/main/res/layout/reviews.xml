<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" 
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Display1"
        tools:text="Author Here" />

    <TextView
        android:id="@+id/review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/author_review"
        app:layout_constraintLeft_toLeftOf="@+id/author_review"
        app:layout_constraintRight_toRightOf="@+id/author_review"
        style="@style/TextAppearance.AppCompat.Body2"
        tools:text="Review Text" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/review"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/divider"
        />

</android.support.constraint.ConstraintLayout>